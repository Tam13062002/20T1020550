@model _20T1020550.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @placehoder = "", @autoufocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placehoder = "", @autoufocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>