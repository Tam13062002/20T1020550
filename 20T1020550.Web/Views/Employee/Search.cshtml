@model _20T1020550.Web.Models.EmployeeSearchOutput


@{
    Layout = null;
}
<p>
    Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> nhân viên trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang
</p>



    <table class="table table-bordered table-hover table-striped ">


        <tbody>
            <div class="row ">
                @foreach (var item in Model.Data)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card">
                            <div class="box-body box-profile">
                                <span class="input-group-btn bg-primary ">
                                    <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-danger pull-right">
                                        <i class="glyphicon glyphicon-trash" title="Xóa"></i>
                                    </a>
                                    <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-success pull-right ">
                                        <i class="glyphicon glyphicon-edit " title="Sửa"></i>
                                    </a>
                                </span>
                                <div class="el-card-item">
                                    <div class="el-card-avatar el-overlay-1" ; style="margin-top: 8px ; height: 180px">
                                        <img src="~/Photo/@item.Photo" alt="employee photo" class="img-responsive img-circle" ; style="margin-left: auto; margin-right: auto; width: 140px ">
                                    </div>
                                    <div class="el-card-content text-center">
                                        <h3> @item.FirstName @item.LastName </h3>
                                    </div>
                                    <ul class="nav nav-stacked">
                                        <li>
                                            <p class="form-control-static" style="font-size: 15px;">Ngày sinh: <span class="pull-right" style="margin-right: 10px;">@string.Format("{0:dd/MM/yyyy}", item.BirthDate)</span></p>
                                        </li>

                                        <li>
                                            <p class="form-control-static" style="font-size: 15px;

                                                                                overflow: hidden;
                                                                                text-overflow: ellipsis;
                                                                                line-height: 25px;
                                                                                -webkit-line-clamp: 3;
                                                                                height: 75px; display: -webkit-box;
                                                                                -webkit-box-orient: vertical; ">Ghi chú: <span class="pull-right" style="margin-right: 10px;">@item.Notes</span></p>
                                                                            </li>

                                        <li>
                                            <p class="form-control-static" style="font-size: 15px;">Email: <span class="pull-right" style="margin-right: 10px;">@item.Email</span></p>
                                        </li>

                                    </ul>
                                 </div>
                             </div>
                        </div>
                     </div>
                 }
            </div>
        </tbody>

    </table>
    <div class=" text-center">
        <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="paginate_button active">
                            <a href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="paginate_button">
                            <a href="javascripts:;" onclick="doSearch(@i)">@i</a>
                        </li>
                    }

                }
            </ul>
        </div>
    </div>
